{
  "name": "@gears-bot/rehype",
  "version": "2.0.0",
  "description": "The set of custom of rehype plugins for blogy.me",
  "homepage": "https://rehype.gears.bot/",
  "repository": "git@github.com:tuphan-dn/rehype.git",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist"
  ],
  "exports": {
    "./rehype-extended-highlight": {
      "require": "./dist/cjs/rehype-extended-highlight.js",
      "import": "./dist/esm/rehype-extended-highlight.js"
    },
    "./rehype-git-contributors": {
      "require": "./dist/cjs/rehype-git-contributors.js",
      "import": "./dist/esm/rehype-git-contributors.js"
    },
    "./rehype-lite-mermaid": {
      "require": "./dist/cjs/rehype-lite-mermaid.js",
      "import": "./dist/esm/rehype-lite-mermaid.js"
    },
    "./package.json": "./package.json"
  },
  "keywords": [
    "markdown",
    "mdx",
    "rehype"
  ],
  "author": {
    "name": "Tu Phan",
    "email": "tuphan@gears.bot"
  },
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "build": "pnpm clean && pnpm build:cjs && pnpm build:esm",
    "build:cjs": "tsc -p ./tsconfig.cjs.json && tsc-alias -p ./tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > ./dist/cjs/package.json",
    "build:esm": "tsc -p ./tsconfig.esm.json && tsc-alias -p ./tsconfig.esm.json && echo '{\"type\":\"module\"}' > ./dist/esm/package.json",
    "clean": "rimraf dist docs",
    "ci:docs": "typedoc",
    "ci:release": "semantic-release"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "attributes-parser": "^2.2.2",
    "isomorphic-git": "^1.26.4",
    "mdast-util-to-string": "^4.0.0",
    "rehype-highlight": "^7.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.7",
    "@types/hast": "^3.0.4",
    "@types/node": "^20.14.9",
    "husky": "^9.0.11",
    "rimraf": "^5.0.7",
    "semantic-release": "^24.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "typedoc": "^0.26.3",
    "typescript": "^5.5.3",
    "vfile": "^6.0.1"
  }
}
